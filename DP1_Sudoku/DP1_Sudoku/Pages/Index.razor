@page "/"

<div class="container">
    <h2>9x9</h2>
    <h1>example-game</h1>

    <div class="row">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="d-flex justify-content-center">
                <Puzzle></Puzzle>
            </div>
        </div>
        <div class="col-12  col-lg-4 col-xl-6 mt-3 mt-lg-0">
            <div class="thin-border mb-3 p-3">
                <h3>Editor mode</h3>

                <div class="form-check">
                    <input class="form-check-input" name="edit-mode" type="radio" id="auxiliary-numbers-edit-mode" @onchange="SwitchEditMode">
                    <label class="form-check-label" for="auxiliary-numbers-edit-mode">
                        Entering/deleting auxiliary numbers
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" name="edit-mode" type="radio" id="final-numbers-edit-mode" @onchange="SwitchEditMode" checked>
                    <label class="form-check-label" for="final-numbers-edit-mode">
                        Entering/deleting final numbers
                    </label>
                </div>
            </div>

            <div class="thin-border mb-3 p-3">
                <h3>Display options</h3>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="auxiliary-numbers-display-option" @onchange="ToggleShowAuxiliaryNumbers" />
                    <label class="form-check-label" for="auxiliary-numbers-display-option">
                        Auxiliary numbers
                    </label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="invalid-number-color-display-option" @onchange="ToggleColorInvalidNumbers" />
                    <label class="form-check-label" for="invalid-number-color-display-option">
                        Invalid number color
                    </label>
                </div>
            </div>

            <button class="btn btn-primary w-100 mb-3">Solve</button>
            <button class="btn btn-primary w-100">Check</button>
        </div>
    </div>

</div>